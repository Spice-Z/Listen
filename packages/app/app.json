{
  "expo": {
    "name": "Listen",
    "slug": "Listen",
    "scheme": "listen-podcast",
    "version": "1.0.0",
    "jsEngine": "hermes",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      "@react-native-firebase/app",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      "expo-tracking-transparency"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSUserTrackingUsageDescription": "アプリのバグ修正や体験向上のために行動データを利用します。"
      },
      "bundleIdentifier": "com.spicex.Listen",
      "requireFullScreen": true,
      "buildNumber": "20"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.spicex.Listen",
      "versionCode": 8
    },
    "extra": {
      "eas": {
        "projectId": "0b079cfe-10c2-470d-aeac-3242cb2a4790"
      }
    }
  },
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-5532826448688500~4365274585",
    "ios_app_id": "ca-app-pub-5532826448688500~5869626627",
    "user_tracking_usage_description": "許可することで、より関連性の高い広告を表示することができるようになります。"
  }
}
